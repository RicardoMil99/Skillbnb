<div class= main-container>
<h1> Services </h1>

<div class="searchbar">
  <div class="form">
    <%= form_tag services_path, method: :get do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a skill",
            autocomplete: 'off' %>
        <%= submit_tag "Search", class: "btn btn-dark" %>
    <% end %>
  </div>
</div>

<br>
<br>

<div class="container">
  <div class='cards'>
    <% @services.each do |s| %>
      <% if s.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path s.photo.key, height: 300, crop: :fill %>')">
      <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://wallpaperaccess.com/full/1078877.jpg)">
      <% end  %>
        <%= link_to s.skill_name, service_path(s), class:'link' %>
      </div>
    <% end %>
   </div>
</div>
</div>
