              <% if current_user %>
                <a class="dropdown-item" href="/dashboard">Dashboard</a>
              <%end%>

              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
          <%else %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_up">Sign up</a>
            </li>
          <% end %>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
